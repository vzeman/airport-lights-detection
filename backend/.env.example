# Database Configuration
DATABASE_URL=mysql+aiomysql://airport_user:airport_pass@mysql:3306/airport_mgmt

# Security
SECRET_KEY=your-secret-key-change-in-production
ENVIRONMENT=development
DEBUG=true

# API URLs
API_BASE_URL=http://localhost:8001
BACKEND_URL=http://localhost:8001
FRONTEND_URL=http://localhost:3001

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# External APIs
OPENAIP_API_KEY=

# AWS S3 Storage Configuration
# Set USE_S3_STORAGE=true to enable S3 storage
# Run infrastructure/aws-setup.sh to create bucket and IAM user
USE_S3_STORAGE=false
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
S3_BUCKET=airport-mgmt-storage
S3_PRESIGNED_URL_EXPIRATION=3600

# File Storage (used when USE_S3_STORAGE=false)
DATA_PATH=/data
VIDEO_PATH=/data/videos
IMAGE_PATH=/data/images
REPORT_PATH=/data/reports
TEMP_PATH=/tmp
MODEL_PATH=/data/models
