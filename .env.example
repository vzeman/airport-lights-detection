# PAPI Detection Web UI Environment Variables
# Copy this file to .env and update the values

# Flask Configuration
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Server Configuration
PORT=5000
HOST=127.0.0.1

# File Upload Configuration
UPLOAD_FOLDER=uploads
REPORTS_FOLDER=reports
MAX_FILE_SIZE=16777216  # 16MB in bytes

# Processing Configuration
PROCESSING_TIMEOUT=300  # 5 minutes in seconds
MAX_BATCH_SIZE=50  # Maximum images in batch processing
CLEANUP_INTERVAL=3600  # Status cleanup interval (1 hour)
STATUS_RETENTION_HOURS=1  # How long to keep processing status

# Logging Configuration
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL